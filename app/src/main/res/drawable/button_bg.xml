<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape>
            <corners android:radius="18dp" />
            <solid android:color="#1c1c1c" />
        </shape>
    </item>

    <!-- Main Button Background -->
    <item android:top="2dp" android:bottom="2dp">
        <shape>
            <corners android:radius="16dp" />
            <gradient
                android:angle="45"
                android:startColor="#3a3a3a"
                android:centerColor="#424242"
                android:endColor="#525252"
                android:type="linear" />
            <padding
                android:top="6dp"
                android:bottom="6dp"
                android:left="18dp"
                android:right="18dp" />
        </shape>
    </item>

</layer-list>
